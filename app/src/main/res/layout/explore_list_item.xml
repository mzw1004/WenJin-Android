<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tv_explore_item_title"
            android:textSize="16sp"
            android:textColor="@color/color_text_primary_b"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/divider"
            android:background="@color/color_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_explore_item_title"
            android:layout_marginTop="8dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_explore_item_avatar"
            android:src="@drawable/ic_user_avatar"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/divider" />

        <TextView
            android:id="@+id/tv_explore_item_user"
            android:textSize="14sp"
            android:textColor="@color/color_text_primary_b"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_below="@+id/divider"
            android:layout_toRightOf="@id/iv_explore_item_avatar"
            android:layout_toEndOf="@id/iv_explore_item_avatar"
            />

        <TextView
            android:id="@+id/tv_explore_item_state"
            android:text="@string/reply_question"
            android:textSize="14sp"
            android:textColor="@color/color_text_secondary"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@id/tv_explore_item_user"
            android:layout_toEndOf="@id/tv_explore_item_user"
            android:layout_below="@id/divider" />

        <TextView
            android:id="@+id/tv_explore_item_time"
            android:textSize="14sp"
            android:textColor="@color/color_text_secondary"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignRight="@id/tv_explore_item_title"
            android:layout_alignEnd="@id/tv_explore_item_title"
            android:layout_below="@id/divider"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>