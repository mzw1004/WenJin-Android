<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_home_item_avatar"
            android:src="@drawable/ic_user_avatar"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/tv_home_item_username"
            android:textSize="14sp"
            android:textColor="@color/color_text_primary_b"
            android:typeface="sans"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@+id/iv_home_item_avatar"
            android:layout_toEndOf="@+id/iv_home_item_avatar"
            />

        <TextView
            android:id="@+id/tv_home_item_status"
            android:textSize="14sp"
            android:textColor="@color/color_text_secondary"
            android:typeface="sans"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toRightOf="@+id/tv_home_item_username"
            android:layout_toEndOf="@+id/tv_home_item_username"
            />

        <TextView
            android:id="@+id/tv_home_item_title"
            android:textSize="16sp"
            android:textColor="@color/color_text_primary_b"
            android:typeface="sans"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_home_item_username" />

        <TextView
            android:id="@+id/tv_home_item_content"
            android:textSize="14sp"
            android:maxLines="5"
            android:ellipsize="end"
            android:textColor="@color/color_text_secondary"
            android:typeface="sans"
            android:layout_alignLeft="@id/tv_home_item_title"
            android:layout_alignRight="@id/tv_home_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_home_item_title"/>

        <View
            android:id="@+id/v_home_divider"
            android:background="@color/color_divider"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_home_item_content" />

        <LinearLayout
            android:id="@+id/groupview_agree_label"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/v_home_divider"
            android:layout_alignLeft="@+id/tv_home_item_title"
            android:layout_alignStart="@+id/tv_home_item_title"
            android:background="@drawable/image_number_background"
            >
        <ImageView
            android:id="@+id/iv_home_item_agree"
            android:visibility="visible"
            android:src="@drawable/ic_action_agree_white"
            android:scaleType="centerCrop"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"

            />
         <ImageView
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:layout_marginTop="3dp"
             android:layout_marginBottom="3dp"
             android:layout_marginLeft="2dp"
             android:layout_marginStart="2dp"
             android:background="@color/md_white_1000"
             />

        <TextView
            android:id="@+id/tv_home_item_agree_number"
            android:visibility="visible"
            android:typeface="sans"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:textSize="14sp"
            android:text="16"
            android:textColor="@android:color/white"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_home_item_article_label"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/v_home_divider"
            android:layout_alignLeft="@+id/tv_home_item_title"
            android:layout_alignStart="@+id/tv_home_item_title"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="@drawable/image_number_background"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:text="文章"
            />
        <TextView
            android:id="@+id/tv_home_item_time"
            android:textSize="14sp"
            android:textColor="@color/color_text_secondary"
            android:typeface="sans"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_alignRight="@+id/tv_home_item_title"
            android:layout_alignEnd="@+id/tv_home_item_title"
            android:layout_height="24dp"
            android:layout_below="@+id/v_home_divider"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>