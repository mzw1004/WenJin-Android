<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twt.service.wenjin.ui.topic.TopicFragment">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs_topic"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:textColor="@color/color_primary_light"
        app:pstsTextColorSelected="@android:color/white"
        app:pstsIndicatorColor="@color/color_accent"
        app:pstsShouldExpand="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_topic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
